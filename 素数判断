            margin: 0;
            font-family: Arial, sans-serif;
        }
        .container {
            text-align: center;
        }
        .title {
            position: absolute;
            top: 40px;
            left: 40px;
            font-size: 40px;
            font-family: Arial, sans-serif;
            color: #333;
            margin: 0;
        }
        .selected-mode {
            font-size: 50px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }
        #fixedText {
            font-size: 24px;
            margin-bottom: 10px;
        }
        #randomNumber {
            font-size: 28px;
            font-weight: bold;
            color: #333;
        }
        #primeAnswer {
            font-size: 28px;
            font-weight: bold;
            color: #333;
        }
        #primeQuestion {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        #backButton {
            position: fixed; /* 固定位置 */
            bottom: 20px; /* 画面下から20pxの位置 */
            right: 20px; /* 画面右から20pxの位置 */
            font-size: 20px; /* ボタンの文字サイズ */
            padding: 10px 20px; /* ボタンの余白 */
            background-color: #007BFF; /* ボタンの背景色 */
            color: white; /* ボタンの文字色 */
            border: none; /* ボーダーなし */
            border-radius: 5px; /* 角を丸くする */
            cursor: pointer; /* ポインター変更 */
        }
        #backButton:hover {
            background-color: #0056b3; /* ホバー時の背景色 */
        }
    </style>
    <script>
        function isPrime(num) {
            if (num <= 1) return false;
            for (let i = 2; i < Math.sqrt(num) + 1; i++) {
                if (num % i === 0) return false;
            }
            return true;
        }

        function startGame() {
            hideButtons();
            document.getElementById('modeDisplay').textContent = '素数判断ゲームモード';
            countdownToStart(3);
        }

        function countdownToStart(seconds) {
            if (seconds > 0) {
                document.getElementById('modeDisplay').textContent = `${seconds}...`;
                setTimeout(() => countdownToStart(seconds - 1), 1000);
            } else {
                document.getElementById('modeDisplay').textContent = 'ゲームスタート！';
                setTimeout(() => {
                    document.getElementById('modeDisplay').textContent = '';
                    document.getElementById('game').style.display = 'block';
                    generateRandomNumber();
                }, 1000);
            }
        }

        function hideButtons() {
            document.getElementById('startButtons').style.display = 'none';
        }

        function backToModeSelection() {
            document.getElementById('Check').style.display = 'none';
            document.getElementById('game').style.display = 'none';
            document.getElementById('startButtons').style.display = 'block';
            document.getElementById('modeDisplay').textContent = 'モードを選んでください';
        }

        function generateRandomNumber() {
            const candidates = [0, 1, 2];
            for (let i = 3; i <= 99; i += 2) {
                candidates.push(i);
            }
            const randomIndex = Math.floor(Math.random() * candidates.length);
            const randomNumber = candidates[randomIndex];
            document.getElementById('randomNumber').textContent = randomNumber;
            document.getElementById('primeQuestion').style.display = 'flex';
            document.getElementById('primeAnswer').textContent = '';
        }

        function nextQuestionWithDelay() {
            document.getElementById('primeAnswer').textContent = '次の問題に移ります...';
            setTimeout(generateRandomNumber, 1000);
        }

        function answerPrime(isPrimeAnswer) {
            const randomNumber = parseInt(document.getElementById('randomNumber').textContent, 10);
            const correctAnswer = isPrime(randomNumber) ? '素数' : '素数ではない';
            const userAnswer = isPrimeAnswer ? '素数' : '素数ではない';
            const resultText = (correctAnswer === userAnswer) ? '正解です！' : `間違いです。${randomNumber}は${correctAnswer}です。`;
            document.getElementById('primeAnswer').textContent = resultText;

            setTimeout(nextQuestionWithDelay, 1000);
        }

        function showPrimeCheck() {
            hideButtons();
            document.getElementById('modeDisplay').textContent = '素数チェックモード';
            document.getElementById('Check').style.display = 'block';
        }

        function checkPrime() {
            const input = document.getElementById('numberInput').value;
            const number = parseInt(input, 10);
            if (isNaN(number)) {
                document.getElementById('result').textContent = '有効な数字を入力してください。';
                return;
            }
            const result = isPrime(number) ? `${number}は素数です。` : `${number}は素数ではありません。`;
            document.getElementById('result').textContent = result;
        }
    </script>
</head>
<body>
    <div class="container">
        <h1 class="title">素数プログラム</h1>
        <p id="modeDisplay" class="selected-mode">モードを選んでください</p>
        <div id="startButtons">
            <button onclick="showPrimeCheck()" style="font-size: 35px;">素数チェック</button>
            <button onclick="startGame()" style="font-size: 35px;">素数判断ゲーム</button>
        </div>
        
        <div id="Check" style="display:none;">
            <h2>素数チェック</h2>
            <label for="numberInput">数字を入力してください:</label>
            <input type="number" id="numberInput" required>
            <button onclick="checkPrime()">判定</button>
            <p id="result"></p>
        </div>

        <div id="game" style="display:none;">
            <h2>素数判断ゲーム</h2>
            <div id="primeQuestion">
                <div id="fixedText">素数判断ゲーム<br>この数字は素数ですか？</div>
                <p id="randomNumber"></p>
                <div>
                    <button onclick="answerPrime(true)">素数</button>
                    <button onclick="answerPrime(false)">素数ではない</button>
                </div>
            </div>
            <p id="primeAnswer"></p>
        </div>
        <button id="backButton" onclick="backToModeSelection()">モード選択に戻る</button>
    </div>
</body>
</html>
